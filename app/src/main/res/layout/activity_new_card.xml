<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewCardActivity"
        android:background="@color/whitePrimary">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/scrollView2">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <android.support.v7.widget.Toolbar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorPrimary"
                        android:theme="?attr/actionBarTheme"
                        android:minHeight="?attr/actionBarSize"
                        tools:layout_editor_absoluteY="0dp"
                        android:backgroundTint="@color/redPrimary"
                        tools:layout_editor_absoluteX="8dp"
                        android:id="@+id/toolbar">
                    <Button
                            android:layout_gravity="right"
                            android:text="Publish"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="?android:attr/borderlessButtonStyle"
                            tools:layout_editor_absoluteX="322dp"
                            android:id="@+id/publish_card"
                            android:background="@color/redPrimary"
                            android:textColor="@color/whitePrimary"/>
                </android.support.v7.widget.Toolbar>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">
                <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/default_avatar"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FFF"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:id="@+id/user"
                            android:text="Nome Utente"
                            android:textSize="16sp"
                            android:paddingLeft="10dp"
                            android:textStyle="bold"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:id="@+id/activity_title"
                            android:text="Add a new Card"
                            android:textSize="14sp"
                            android:paddingLeft="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/container_categories"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <Button
                    android:fontFamily="sans-serif"
                    android:id="@+id/add_category"
                    android:text="Image"
                    android:textColor="@color/redPrimary"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="center_vertical"
                    android:textStyle="normal"
                    style="?android:attr/borderlessButtonStyle"
                    android:backgroundTint="#FFF"
                    android:drawablePadding="7dp"
                    android:drawableLeft="@drawable/ic_image_black_24dp"
                    android:drawableTint="@color/redPrimary"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/container"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:id="@+id/title_text"
                        android:background="#fff"
                        android:hint="Write your Card Title"
                        android:padding="10dp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:id="@+id/desc_text"
                        android:background="#fff"
                        android:hint="Write your Card Description"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="100dp"/>
            </LinearLayout>
            <TableLayout
                    android:id="@+id/container_multimedia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="parent"
                    tools:layout_editor_absoluteY="292dp" tools:layout_editor_absoluteX="8dp">
                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="25dp">
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            tools:layout_editor_absoluteY="602dp"
            tools:layout_editor_absoluteX="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/container_buttons">
        <Button
                android:fontFamily="sans-serif"
                android:id="@+id/image_btn"
                android:text="Image"
                android:textColor="@color/redPrimary"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:textStyle="normal"
                style="?android:attr/borderlessButtonStyle"
                android:backgroundTint="#FFF"
                android:drawablePadding="7dp"
                android:drawableLeft="@drawable/ic_image_black_24dp"
                android:drawableTint="@color/redPrimary"/>
        <Button
                android:fontFamily="sans-serif"
                android:id="@+id/video_btn"
                android:text="Video"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/redPrimary"
                android:textAllCaps="false"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textStyle="normal"
                android:backgroundTint="#FFF"
                android:drawablePadding="7dp"
                android:drawableLeft="@drawable/ic_video_library_black_24dp"
                android:drawableTint="@color/redPrimary"/>
        <Button
                android:fontFamily="sans-serif"
                android:id="@+id/link_btn"
                android:text="Link"
                android:layout_gravity="right"
                android:textColor="@color/redPrimary"
                android:textAllCaps="false"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFF"
                android:gravity="center_vertical"
                android:textStyle="normal"
                android:drawablePadding="7dp"
                android:drawableLeft="@drawable/ic_bookmark_black_24dp"
                android:drawableTint="@color/redPrimary"/>
    </android.support.v7.widget.Toolbar>
</android.support.constraint.ConstraintLayout>