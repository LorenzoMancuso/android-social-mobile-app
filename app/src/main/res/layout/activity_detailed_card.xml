<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailedCardActivity"
        android:background="@color/whitePrimary">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp"
            android:id="@+id/scrollview" android:clipToPadding="false">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cv"
                    app:cardCornerRadius="5dp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <de.hdodenhof.circleimageview.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/profile_image"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/default_avatar"
                                app:civ_border_width="2dp"
                                app:civ_border_color="#FFF"/>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:id="@+id/user"
                                    android:text="Nome Utente"
                                    android:textSize="16sp"
                                    android:paddingLeft="10dp"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:id="@+id/date"
                                    android:text="Data"
                                    android:textSize="13sp"
                                    android:paddingLeft="10dp"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/id_user"
                                    android:textStyle="bold"
                                    android:visibility="gone"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                            android:background="#fff"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/container_categories"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:padding="15dp"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/title"
                                android:text="Titolo"
                                android:clickable="true"
                                android:focusable="true"
                                android:textSize="20sp"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Descrizione"
                                android:id="@+id/description"/>
                        <LinearLayout android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:id="@+id/container_multimedia">
                            <android.support.v4.view.ViewPager
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/multimedia_pager">
                            </android.support.v4.view.ViewPager>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:gravity="center_horizontal"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/ratings_title"
                                android:gravity="center_horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/redPrimary"
                                android:text="What do you think about this Card?"
                                android:textSize="16sp"/>
                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:max="5"
                                style="?android:attr/ratingBarStyle"
                                android:progressTint="@color/blackPrimary"
                                android:secondaryProgressTint="#FFF"
                                android:stepSize="0.5"
                                android:visibility="visible"
                                android:layout_marginTop="10dp"
                                android:id="@+id/ratings"/>
                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:max="5"
                                style="?android:attr/ratingBarStyleSmall"
                                android:progressTint="@color/redPrimary"
                                android:stepSize="0.5"
                                android:layout_marginTop="10dp"
                                android:visibility="gone"
                                android:id="@+id/final_ratings"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:padding="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:id="@+id/container_link">
            </LinearLayout>
            <LinearLayout
                android:padding="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:focusableInTouchMode="true"
                android:id="@+id/container_comments">
                <TextView
                        android:fontFamily="sans-serif"
                        android:textColor="@color/redPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="7dp"
                        android:textSize="16sp"
                        android:text="Click here to add a comment"
                        android:id="@+id/comments_title"
                        android:drawableLeft="@drawable/ic_message_black_24dp"
                        android:drawableTint="@color/redPrimary"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:id="@+id/add_comment"
                        android:background="#fff"
                        android:hint="Write your Comment"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:visibility="gone"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="100dp"/>
                <Button
                        android:text="Add comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteY="0dp"
                        tools:layout_editor_absoluteX="322dp"
                        android:id="@+id/publish_comment"
                        android:background="@color/redPrimary"
                        android:layout_gravity="right"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/whitePrimary"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>