<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whitePrimary"
        tools:context=".EditCardActivity">
        <ScrollView
                android:id="@+id/login_form"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:focusableInTouchMode="true">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                        <android.support.v7.widget.Toolbar
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?attr/colorPrimary"
                                android:theme="?attr/actionBarTheme"
                                android:minHeight="?attr/actionBarSize"
                                tools:layout_editor_absoluteY="0dp"
                                android:backgroundTint="@color/redPrimary"
                                tools:layout_editor_absoluteX="8dp"
                                android:id="@+id/toolbar">
                            <Button
                                    android:layout_gravity="right"
                                    android:text="Edit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="?android:attr/borderlessButtonStyle"
                                    tools:layout_editor_absoluteX="322dp"
                                    android:id="@+id/confirm_button"
                                    android:background="@color/redPrimary"
                                    android:textColor="@color/whitePrimary"/>
                        </android.support.v7.widget.Toolbar>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="30dp"
                            android:orientation="vertical"
                            android:paddingRight="30dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp">
                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Text"/>
                            <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <EditText
                                            android:id="@+id/txt_title"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Title"
                                            android:padding="16dp"
                                            android:layout_marginBottom="10dp"
                                            android:maxLines="1"
                                            android:singleLine="true"/>
                            </android.support.design.widget.TextInputLayout>
                            <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <EditText
                                            android:id="@+id/txt_description"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Description"
                                            android:padding="16dp"
                                            android:layout_marginBottom="10dp"
                                            android:maxLines="1"
                                            android:singleLine="true"/>
                            </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/container_categories"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Categories"/>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:id="@+id/added_categories">
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Link"/>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:focusableInTouchMode="true"
                                android:id="@+id/container_link">
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:id="@+id/container_multimedia"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Multimedia"/>
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                        </LinearLayout>
                    </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                app:layout_constraintBottom_toBottomOf="parent">
                <android.support.v7.widget.Toolbar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="?attr/actionBarTheme"
                        android:minHeight="?attr/actionBarSize"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/container_buttons">
                    <Button
                            android:fontFamily="sans-serif"
                            android:id="@+id/add_categories"
                            android:text="Tabs"
                            android:textColor="@color/redPrimary"
                            android:textAllCaps="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_horizontal"
                            style="?android:attr/borderlessButtonStyle"
                            android:textStyle="normal"
                            android:backgroundTint="#FFF"
                            android:drawablePadding="7dp"
                            android:drawableLeft="@drawable/ic_widgets_black_24dp"
                            android:drawableTint="@color/redPrimary"/>
                    <Button
                            android:fontFamily="sans-serif"
                            android:id="@+id/multimedia_btn"
                            android:text="Multimedia"
                            android:textColor="@color/redPrimary"
                            android:textAllCaps="false"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="normal"
                            android:backgroundTint="#FFF"
                            android:drawablePadding="7dp"
                            android:drawableLeft="@drawable/ic_video_library_black_24dp"
                            android:drawableTint="@color/redPrimary"/>
                    <Button
                            android:fontFamily="sans-serif"
                            android:id="@+id/link_btn"
                            android:text="Link"
                            android:textColor="@color/redPrimary"
                            android:textAllCaps="false"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#FFF"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="normal"
                            android:drawablePadding="7dp"
                            android:drawableLeft="@drawable/ic_bookmark_black_24dp"
                            android:drawableTint="@color/redPrimary"/>
                </android.support.v7.widget.Toolbar>
        </HorizontalScrollView>
</android.support.constraint.ConstraintLayout>