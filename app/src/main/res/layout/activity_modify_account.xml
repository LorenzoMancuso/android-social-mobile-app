<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        tools:context=".ModifyAccountActivity">

    <!-- * NAME
     * SURNAME
     * BIRTHDATE
     * COUNTRY
     * CITY
     * PROFESSION-->

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome"
                android:maxLines="1"
                android:singleLine="true"
                android:padding="16dp"
                android:layout_marginBottom="10dp"/>
        <TextView
                android:id="@+id/txt_surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="cognome"
                android:maxLines="1"
                android:singleLine="true"
                android:padding="16dp"
                android:layout_marginBottom="10dp"/>
        <TextView
                android:id="@+id/txt_birthdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data di nascita"
                android:maxLines="1"
                android:singleLine="true"
                android:padding="16dp"
                android:layout_marginBottom="10dp"/>
        <TextView
                android:id="@+id/txt_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CittÃ "
                android:maxLines="1"
                android:singleLine="true"
                android:padding="16dp"
                android:layout_marginBottom="10dp"/>
        <TextView
                android:id="@+id/txt_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Stato"
                android:maxLines="1"
                android:singleLine="true"
                android:padding="16dp"
                android:layout_marginBottom="10dp"/>

        <TextView
                android:id="@+id/txt_profession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Professione"
                android:maxLines="1"
                android:singleLine="true"
                android:padding="16dp"
                android:layout_marginBottom="10dp"/>

        <Button
                android:id="@+id/confirm_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="CONFERMA INFORMAZIONI"
                android:textColor="#FFFFFF"
                android:background="#D84B37"
                android:textStyle="bold"/>

    </android.support.design.widget.TextInputLayout>

</LinearLayout>